generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Story {
  id        String   @id @default(cuid())
  title     String
  url       String
  description  String?
  category  String
  author    String?  @default("Unknown Author")
  timestamp DateTime @default(now())
  favorites Favorite[] 
  @@index([category])
}

model Favorite {
  id  String  @id @default(cuid())
  storyId   String
  userId  String   // IP address or session ID for anonymous users
  createdAt DateTime @default(now())

  story Story   @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([storyId, userId])
  @@index([userId])
  }
